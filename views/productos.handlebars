<div class="flex-padre">
{{#if productos}}
  {{#each productos}}

  <div class="producto">
    <div class="imagen-box">
      <img src= {{this.thumbnail}} alt="Imagen del producto">
    </div>
    <form class="productos-form" target="iframe-carrito" action="/carrito/miCarrito" method="post">
      <input type="hidden" name="idBack" value="{{this.idBack}}">
      <div class="nombre"><h3>{{this.nombre}}</h3></div>
      <div class="descripcion"><p>{{this.descripcion}}</p>
      <p>Precio: ${{this.precio}}</p>
      <p>Categoria: {{this.categoria}}</p></div>
      <div class="submit-box"><input type="number" name="cantidad" value="1" min="1">
      <button type="submit" class="boton-carrito">Agregar al carrito</button></div>
    </form>
    <iframe name="iframe-carrito" style="display:none;"></iframe>
  </div>

  {{/each}}
  </div>
  {{else}}
  <form class="productos-form" action="/productos/prueba" method="post">
    <button type="submit" class="boton-carrito" >Cargar Productos de prueba</button>
  </form>
{{/if}}